{
  "name": "vite-fastify-template",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "tsc:server": "tsc --project ./tsconfig.server.json",
    "build": "tsc -b && vite build && npm run tsc:server",
    "test": "jest --config jest.config.ts",
    "start:dev": "NODE_ENV=development node src/server/server.js",
    "start": "NODE_ENV=production node src/server/server.js",
    "client": "vite --host",
    "server": "NODE_ENV=development tsx watch src/server/server.ts",
    "lint": "eslint .",
    "lambda:build": "node ./build-lambda.mjs",
    "copy-dist-to-lambda": "cp -R dist lambda/dist",
    "lambda:prepare": "VITE_AWS_STAGE=prod npm run build && npm run copy-dist-to-lambda",
    "lambda": "rimraf lambda && npm run lambda:build && npm run lambda:prepare",
    "cdk:bootstrap": "cdk bootstrap",
    "cdk:synth": "cdk synth",
    "cdk:deploy": "cdk deploy"
  },
  "dependencies": {
    "@fastify/aws-lambda": "^5.1.4",
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/static": "^8.2.0",
    "aws-lambda-fastify": "^2.2.0",
    "fastify": "^5.3.3",
    "ip-range-check": "^0.2.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@swc/core": "^1.12.1",
    "@swc/jest": "^0.2.38",
    "@tailwindcss/vite": "^4.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/aws-lambda": "^8.10.149",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.7",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "autoprefixer": "^10.4.21",
    "aws-cdk": "^2.1018.1",
    "aws-cdk-lib": "^2.201.0",
    "constructs": "^10.4.2",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.3.5",
    "whatwg-fetch": "^3.6.20"
  },
  "engines": {
    "node": "22.x"
  }
}
